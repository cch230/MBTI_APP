<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/final_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/home_coordinator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0sp"
            android:background="@color/background">




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <RelativeLayout
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp">

                            <TextView
                                android:id="@+id/notice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="밑에 항목 중에 자신에게 맞는 항목을 체크해주세요!"
                                android:textAlignment="center"
                                android:textColor="@color/gray_50"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/itsme"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/notice"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="0dp"
                                android:text="흥 넘치고 긍정적이며 \n낙천적인 에너지의 소유자"
                                android:textAlignment="center"
                                android:textColor="@color/coral"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TableRow
                                android:id="@+id/tr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/itsme"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginTop="10dp">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="150dp"
                                    android:layout_weight="1">

                                    <androidx.cardview.widget.CardView

                                        android:layout_width="150dp"
                                        android:layout_height="150dp"
                                        android:layout_centerHorizontal="true"
                                        app:cardCornerRadius="10dp">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/back_ground3"
                                            android:foreground="?attr/selectableItemBackground"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/img1346_1" />
                                    </androidx.cardview.widget.CardView>


                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="150dp"
                                    android:layout_weight="1">

                                    <androidx.cardview.widget.CardView

                                        android:layout_width="150dp"
                                        android:layout_height="150dp"
                                        android:layout_centerHorizontal="true"
                                        app:cardCornerRadius="10dp">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/back_ground3"
                                            android:foreground="?attr/selectableItemBackground"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/img1346_2" />
                                    </androidx.cardview.widget.CardView>


                                </RelativeLayout>
                            </TableRow>

                            <TextView
                                android:id="@+id/s_person"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tr"
                                android:layout_marginTop="7dp"
                                android:text="당신과 닮은 성향의 인물"
                                android:textAlignment="center"
                                android:textColor="@color/gray_50"
                                android:textSize="12dp" />

                            <View
                                android:id="@+id/v"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginHorizontal="20dp"
                                android:background="@color/gray_400"
                                android:layout_marginTop="10dp"
                                android:layout_below="@+id/s_person" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/mbti"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title"
                            android:layout_marginTop="20dp"
                            android:layout_marginHorizontal="20dp"
                            android:foreground="?attr/selectableItemBackground">

                            <TextView
                                android:id="@+id/mbti_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="나는 사람들이랑 친해지는데 오래 걸려요."
                                android:textColor="@color/gray_50" />

                            <TextView
                                android:id="@+id/mbti_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/mbti_1"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="관계정리는 칼 같이!"
                                android:textColor="@color/gray_50"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/mbti_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/mbti_2"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="남 일에 눈치 안보고 늘 무신경한 나지만 하나 꽂히면 깊게 빠져들어요!"
                                android:textColor="@color/gray_50"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/mbti_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/mbti_3"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="혼자 있는 것을 제일 좋아합니다. 완전한 개인주의자."
                                android:textColor="@color/gray_50"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/mbti_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/mbti_4"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="약간의 관종끼가 있지만 내성적이라 표출하지 않아요."
                                android:textColor="@color/gray_50"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/mbti_6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/mbti_5"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="표현을 하지 않아도 츤데레의 느낌과 의외로 허당의 \n모습이 보여요!"
                                android:textColor="@color/gray_50"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/mbti_7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/mbti_6"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="항상 완벽을 추구하는 스타일이라 세세한 계획 세우는 것을 좋아해요."
                                android:textColor="@color/gray_50"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/mbti_8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/mbti_7"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="어떤 것에 다양한 각도로 해석하는 걸 좋아해요."
                                android:textColor="@color/gray_50"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/mbti_9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/mbti_8"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="수다떨기를 좋아해요."
                                android:textColor="@color/gray_50"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/mbti_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/mbti_9"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="사실과 원리원칙을 중요시하고 돈관리를 매우 잘해요."
                                android:textColor="@color/gray_50"
                                android:textSize="15sp" />

                            <RelativeLayout
                                android:id="@+id/careful"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/mbti_10"
                                android:layout_marginTop="20dp"
                                android:foreground="?attr/selectableItemBackground">

                                <TextView
                                    android:id="@+id/careful_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="🎈 조심해주세요!"
                                    android:textAlignment="center"
                                    android:textColor="@color/coral"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/mbti_11"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/careful_text"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:text="단체활동은 되도록 피하고 싶어요. 하지만 주도적인 역할을 맡아요!"
                                    android:textColor="@color/gray_50"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/mbti_12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/mbti_11"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:text="효율성이 떨어지는 시스템 용서 못 해!"
                                    android:textColor="@color/gray_50"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/mbti_13"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/mbti_12"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:text="하나부터 열까지의 이유를 말할 수 있어야 나의 고집을 꺾을 수 있어요!"
                                    android:textColor="@color/gray_50"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/mbti_14"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/mbti_13"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:text="감정에 휘둘리는 거 싫어요!"
                                    android:textColor="@color/gray_50"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/mbti_15"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/mbti_14"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:text="누군가 고민상담하면 겉으로는 관심있는 척하지만 공감을 잘 못해요."
                                    android:textColor="@color/gray_50"
                                    android:textSize="15sp" />


                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/bf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/careful"
                                android:layout_marginTop="20dp"
                                android:foreground="?attr/selectableItemBackground">

                                <TextView
                                    android:id="@+id/bf_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="🤩 이런 사람이 좋아요!"
                                    android:textAlignment="center"
                                    android:textColor="@color/coral"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/mbti_16"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/bf_text"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:text="한결같이 예의가 바르고 배려하는 나는 차분한 사람을 좋아합니다!"
                                    android:textColor="@color/gray_50"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/mbti_17"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/mbti_16"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:text="삶의 가치관리나 방향성이 같은 사람이 너무 좋아요!"
                                    android:textColor="@color/gray_50"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/mbti_18"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/mbti_17"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:text="거짓말 싫어요! 솔직하게 대해주세요!"
                                    android:textColor="@color/gray_50"
                                    android:textSize="15sp"
                                    android:layout_marginBottom="30dp" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </androidx.core.widget.NestedScrollView>
            </RelativeLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>